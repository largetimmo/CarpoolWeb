<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>SearchingHandler</servlet-name>
        <servlet-class>web.SearchingHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchingHandler</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>web.LoginHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VerifyLogingInHandler</servlet-name>
        <servlet-class>web.VerifyLogingInHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VerifyLogingInHandler</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PostBookingInfoHandler</servlet-name>
        <servlet-class>web.PostBookingInfoHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostBookingInfoHandler</servlet-name>
        <url-pattern>/postcarpool</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookingHandler</servlet-name>
        <servlet-class>web.BookingHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingHandler</servlet-name>
        <url-pattern>/user/booking</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterHandler</servlet-name>
        <servlet-class>web.RegisterHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterHandler</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchBookedCarpoolHandler</servlet-name>
        <servlet-class>web.SearchBookedCarpoolHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchBookedCarpoolHandler</servlet-name>
        <url-pattern>/user/searchbooking</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ForgetPass</servlet-name>
        <servlet-class>web.ForgetPassHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgetPass</servlet-name>
        <url-pattern>/forgetpass.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ResetPass</servlet-name>
        <servlet-class>web.Resetpass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPass</servlet-name>
        <url-pattern>/resetpass.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserProfile</servlet-name>
        <servlet-class>web.UserInformationHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfile</servlet-name>
        <url-pattern>/user/profile.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewVehicleUser</servlet-name>
        <servlet-class>web.NewVehicalUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewVehicleUser</servlet-name>
        <url-pattern>/user/newvehicaluser.do</url-pattern>
    </servlet-mapping>

    
    
    
    <!-- filter Below-->


    <filter>
        <filter-name>UserManagementAccessFilter</filter-name>
        <filter-class>filter.UserManagementAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserManagementAccessFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>TrafficControl</filter-name>
        <filter-class>filter.TrafficControl</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TrafficControl</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>IPFilter</filter-name>
        <filter-class>filter.IPFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>IPFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
